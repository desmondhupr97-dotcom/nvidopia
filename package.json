{
  "name": "nvidopia",
  "version": "0.1.0",
  "private": true,
  "description": "Autonomous Driving Software Iteration Optimization Platform",
  "workspaces": [
    "apps/*",
    "services/*",
    "platform/*",
    "contracts"
  ],
  "scripts": {
    "infra:up": "docker compose -f infra/docker-compose.yml up -d",
    "infra:down": "docker compose -f infra/docker-compose.yml down",
    "infra:logs": "docker compose -f infra/docker-compose.yml logs -f",
    "fullstack:up": "docker compose -f infra/docker-compose.full.yml up -d --build",
    "fullstack:down": "docker compose -f infra/docker-compose.full.yml down",
    "fullstack:logs": "docker compose -f infra/docker-compose.full.yml logs -f",
    "seed": "npx tsx platform/data-models/src/seed.ts",
    "e2e:smoke": "bash scripts/e2e-smoke.sh",
    "lint": "npm run lint --workspaces --if-present",
    "test": "vitest run",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:watch": "vitest --watch",
    "build": "npm run build --workspaces --if-present"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/supertest": "^6.0.3",
    "mongodb-memory-server": "^11.0.1",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "vitest": "^3.2.4"
  }
}
